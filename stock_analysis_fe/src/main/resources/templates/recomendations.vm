<!DOCTYPE html>
<html lang="en">
	<head>
		 <meta charset="utf-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    	<meta name="viewport" content="width=device-width, initial-scale=1">
    	<meta name="description" content="">
    	<meta name="author" content="">
    	
    	<title>Stock Analysis</title>
    	
    	<!-- Bootstrap Core CSS -->
    	<link href="css/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    	
    	<!-- Custom CSS -->
    	<link href="css/sb-admin-2.css" rel="stylesheet"/>
	</head>
	
	<script type="text/javascript" src="js/jquery-1.4.3.min.js"></script>
	<script type="text/javascript">
		converteNumero = function(val){
			return val.replace("R$","").replace(".","").replace(",",".").replace(" ", "")
		}
		
		generateRecomendations = function () {
			$.ajax(
				{
					type: 'GET',
					dataType: 'json',
					url: 'recomendations/generate?recDate='+document.getElementById('input_date').value+'&accountId=$accountId',
					async: false,
					contentType: "application/json",
					success: function (recData) {
						console.log(recData)
						var html='';
						for (var i in recData.trades) {
							rec = recData.trades[i]
							html += '<tr>';
							html += '<input type="hidden" id="modelId_'+i+'" value="'+rec.modelId+'">';
							html += '<input type="hidden" id="stockId_'+i+'" value="'+rec.stockId+'">';
							html += '<td> <input type="checkbox" id="check_'+i+'" value="'+i+'">  </td>';
							html += '<td id="stockCode_'+i+'" value="'+rec.stockCode+'">'+rec.stockCode+'</td>';
							html += '<td>'+rec.stockName+'</td>';
							html += '<td class="right" value="'+rec.buyDate+'" > <input type="text" name="buyDate_'+i+'" size=10 value="'    +rec.formattedBuyDate+'"/> </td>';
							html += '<td class="right" value="'+rec.buyValue+'"> <input type="text" name="buyValue_'+i+'" size=10 value="'+rec.formattedBuyValue+'"/> </td>';
							html += '<td class="right" value="'+rec.size+'"> <input type="text" name="size_'+i+'" size=10 value="'+rec.size+'" /> </td>';
							html += '<td class="right" value="'+rec.stopPos+'"> <input type="text" name="stopPos_'+i+'" size=10 value="'+rec.formattedStopPos+'" /> </td>';
							html += '</tr>';
						}
						$(var_recomendations_table).html(html);
					},
					error: function (data) {
						alert(data);
					}
				}
			);
		}
		
		executeTrades = function () {
			var trades = []
			$.each($("input[id^='check_']"), function() {
					if(!$(this).attr('checked'))
						return;
					
					var element = $(this).attr('value')
					var tradeVO = {
						"stockId": $("#stockId_"+element).attr('value'),
						"modelId": $("#modelId_"+element).attr('value'),
						"size": converteNumero( $("input[name='size_"+element+"'").attr('value') ),
						"formattedBuyDate":  $("input[name='buyDate_"+element+"'").attr('value') ,
						"buyValue": converteNumero( $("input[name='buyValue_"+element+"'").attr('value') ),
						"stopPos": converteNumero( $("input[name='stopPos_"+element+"'").attr('value'))
					}
					trades.push(tradeVO)
				})
				console.log(JSON.stringify(trades))
				$.ajax(
						{
							type: 'POST',
							dataType: 'json',
							data: JSON.stringify(trades),
							url: 'recomendations/realizeTrades?accountId=$accountId',
							async: false,
							contentType: "application/json",
							success: function (data) {
								console.log(data)
								alert('Trades executados.')
								$.each($("input[id^='check_']"), function() {
									if(!$(this).attr('checked'))
										return;
									
									$(this).attr('disabled', true);
								})
							},
							error: function (result) {
								alert(result.getResponseHeader('Error-Validation-Code'));
							}
						}
					);
			
		}
	</script>
	
	<body>
	
		#set($accountId=$accountId)
		#parse("side_menu.inc")
        
        
        <div id="page-wrapper">
        	<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Recomendações</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            
            <div class="row">
            	<div class="col-lg-2">
            		<label>Data</label>
            	</div>
            </div>
            				
            <div class="row">
            	<div class="col-lg-2">
            		<input class="form-control" id="input_date" type="text">
            	</div>
            	<div class="col-lg-2">
            		<button class="btn btn-primary" onclick="generateRecomendations()">Gerar recomendações</button>
            	</div>
            </div>
							
			<div class="row">
				<div class="col-lg-4">
            		<p class="help-block">Data para qual serão geradas as recomendaçõeses</p>
            	</div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            &nbsp;
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                        	<th></th>
                                            <th>Código</th>
                                            <th>Nome</th>
                                            <th>Data compra</th>
                                            <th>Valor compra</th>
                                            <th>Quantidade</th>
                                            <th>stop</th>
                                        </tr>
                                    </thead>
                                    <tbody id="var_recomendations_table">

                                    </tbody>
                                </table>
                                <div class="row">
                                	<div class="col-lg-offset-10">
            							<button class="btn btn-primary" onclick="executeTrades()">Enviar trades</button>
            						</div>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        
	</body>
</html>