<!DOCTYPE html>
<html lang="en">
	<head>
		 <meta charset="utf-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    	<meta name="viewport" content="width=device-width, initial-scale=1">
    	<meta name="description" content="">
    	<meta name="author" content="">
    	
    	<title>Stock Analysis</title>
    	
    	<!-- Bootstrap Core CSS -->
    	<link href="css/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    	
    	<!-- Custom CSS -->
    	<link href="css/sb-admin-2.css" rel="stylesheet"/>
	</head>
	
	<script type="text/javascript" src="js/jquery-1.4.3.min.js"></script>
	<script type="text/javascript">
		generateRecomendations = function () {
			$.ajax(
				{
					type: 'GET',
					dataType: 'json',
					url: 'recomendations/generate?recDate='+document.getElementById('input_date').value+'&accountId=1',
					async: false,
					contentType: "application/json",
					success: function (recData) {
						var html='';
						for (var i in recData.trades) {
							rec = recData.trades[i]
							html += '<tr>';
							html += '<td><input type="checkbox" value=""></td>';
							html += '<td>'+rec.stockCode+'</td>';
							html += '<td>'+rec.stockName+'</td>';
							html += '<td class="right">'+rec.formatedBuyDate+'</td>';
							html += '<td class="right">'+rec.formatedBuyValue+'</td>';
							html += '<td class="right">'+rec.size+'</td>';
							html += '<td class="right">'+rec.formatedTotalBuyValue+'</td>';
							html += '</tr>';
						}
						$(var_recomendations_table).html(html);
					},
					error: function (recomendationsData) {
						alert(recomendationsData);
					}
				}
			);
		}
	</script>
	
	<body>
	
		#set($accountId=$accountId)
		#parse("side_menu.inc")
        
        
        <div id="page-wrapper">
        	<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Recomendações</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            
            <div class="row">
            	<div class="col-lg-2">
            		<label>Data</label>
            	</div>
            </div>
            				
            <div class="row">
            	<div class="col-lg-2">
            		<input class="form-control" id="input_date" type="text">
            	</div>
            	<div class="col-lg-2">
            		<button class="btn btn-primary" onclick="generateRecomendations()">Gerar recomendações</button>
            	</div>
            </div>
							
			<div class="row">
				<div class="col-lg-4">
            		<p class="help-block">Data para qual serão geradas as recomendaçõeses</p>
            	</div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            &nbsp;
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                        	<th></th>
                                            <th>Código</th>
                                            <th>Nome</th>
                                            <th>Data compra</th>
                                            <th>Valor compra</th>
                                            <th>Quantidade</th>
                                            <th>Valor total</th>
                                        </tr>
                                    </thead>
                                    <tbody id="var_recomendations_table">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        
	</body>
</html>