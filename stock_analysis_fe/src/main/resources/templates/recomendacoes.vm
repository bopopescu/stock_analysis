	<script type="text/javascript">
		generateRecomendations = function () {
			$.ajax(
				{
					type: 'GET',
					dataType: 'json',
					url: 'http://stockanalysis.com.br/recomendation/generate?date='+document.getElementById('input_date').value,
					async: false,
					contentType: "application/json",
					success: function (recomendationsData) {
						var html='';
						for (var i in recomendationsData) {
							$.ajax(
									{
										type: 'GET',
										dataType: 'json',
										url: 'http://stockanalysis.com.br/stock?stockId='+recomendationsData[i].stockId,
										async: false,
										contentType: "application/json",
										success: function (stockdata) {
											html += '<tr>';
											html += '<td><input type="checkbox" value=""></td>';
											html += '<td>'+stockdata.code+'</td>';
											html += '<td>'+stockdata.name+'</td>';
											html += '<td class="right">'+recomendationsData[i].buyDate+'</td>';
											html += '<td class="right">'+recomendationsData[i].buyValue+'</td>';
											html += '<td class="right">'+recomendationsData[i].size+'</td>';
											html += '<td class="right">'+recomendationsData[i].size*recomendationsData[i].buyValue+'</td>';
											html += '</tr>';
										}
									}
							);
						}
						$(var_recomendations_table).html(html);
					},
					error: function (recomendationsData) {
						
					}
				}
			);
		}
	</script>
	
